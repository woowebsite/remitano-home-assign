{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest -c src/test/jest.config.js",
    "test:ci": "jest -c src/test/jest.config.js --collectCoverage --ci  --updateSnapshot",
    "test:coverage": "jest -c src/test/jest.config.js --collectCoverage --verbose",
    "test:update": "jest -c src/test/jest.config.js --collectCoverage --verbose --updateSnapshot",
    "test:watch": "jest -c src/test/jest.config.js --collectCoverage --verbose --watch"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.1",
    "autoprefixer": "10.4.14",
    "axios": "^1.4.0",
    "eslint": "8.43.0",
    "eslint-config-next": "13.4.6",
    "next": "13.4.6",
    "postcss": "8.4.24",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-redux": "^8.1.0",
    "socket.io-client": "^4.6.2",
    "tailwindcss": "3.3.2",
    "typescript": "5.1.3",
    "jest-styled-components": "^7.0.4",
    "ts-jest": "^29.1.1",
    "husky": "^7.0.4"
  },
  "devDependencies": {
    "@types/node": "20.3.1",
    "@types/react": "18.2.13",
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@babel/preset-typescript": "^7.23.0",
    "@types/react-dom": "18.2.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss}": [
      "yarn run lint",
      "prettier --write",
      "git add"
    ]
  }
}
